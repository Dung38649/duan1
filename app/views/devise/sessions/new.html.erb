<h2>Đăng nhập</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <label for="exampleInputEmail1">Nhập email</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Nhập email", class: "form-control",id: "exampleInputEmail1" %>
    <small id="emailHelp" class="form-text text-muted">Nhập email đúng cú pháp (ten@email.com)</small>
  </div>

   <div class="form-group">
   <label for="exampleInputPassword1">Password</label>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "exampleInputPassword1", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
     <button type="submit" class="btn btn-primary">Đăng nhập</button>
  </div>
<% end %>

<%= render "devise/shared/links" %>
