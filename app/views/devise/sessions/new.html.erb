<div class="header-main">
		       <h1>Đăng nhập</h1>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <label>Nhập email</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " Nhập email", class: "form-control"%>
    <small id="emailHelp" class="form-text text-muted">(ten@email.com)</small>
  </div>

   <div class="form-group">
   <label>Password</label>
    <%= f.password_field :password, autocomplete: "off", class: "form-control",  placeholder: "" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
     <button type="submit" class="btn btn-primary">Đăng nhập</button>
  </div>
<% end %><br>

<%= render "devise/shared/links" %>
</div>
  
