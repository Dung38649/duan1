<h2>Chỉnh sửa thông tin</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group" style="padding:20px;margin-bottom:20px">
        <%= f.label :email, :class => "control-label col-sm-2 text-right h4" %>
        <div class="col-sm-10">
          
            <%= f.text_field :email, :class => "form-control", :disabled => 'true' %>
        </div>
    </div>
    <div class="form-group" style="padding:20px;margin-bottom:1px">
        <%= f.label :"Mật khẩu mới", :class => "control-label col-sm-2 text-right h4" %>
        <div class="col-sm-10">
            <%= f.password_field :password, :class => "form-control", :placeholder=>"Nhập trên 3 kí tự" %>
        </div>
        <% if @minimum_password_length %>
          <em>ít nhất <%= @minimum_password_length %> kí tự</em>
        <% end %>

    </div>
    <div class="form-group" style="padding:20px;margin-bottom:20px">
        <%= f.label :"Nhập lại mật khẩu", :class => "control-label col-sm-2 text-right h4" %>
        <div class="col-sm-10">
            <%= f.password_field :password_confir, :class => "form-control", :placeholder=>"Nhập lại mật khẩu" %>
        </div>    
    </div>
    <div class="form-group" style="padding:20px;margin-bottom:20px">
        <%= f.label :"Nhập mật khẩu cũ", :class => "control-label col-sm-2 text-right h4" %> <br />
         <div class="col-sm-10">
            <%= f.password_field :current_password, autocomplete: "off", :class => "form-control", :placeholder=>"Nhập lại mật khẩu" %>
        </div>
    </div>
     <div class="form-group" style="padding:20px;margin-left:1000px;margin-bottom:20px">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Lưu tài khoản</button>
        </div>
    </div>
<% end %>

<h3>Xóa tài khoản</h3>
  <%= button_to "Xóa tài  khoản", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default" %>  
<%= link_to "Back", :back %>

