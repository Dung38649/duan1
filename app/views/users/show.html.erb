
<%= form_for @user do |f| %>
    
    <div class="form-group3" >
        <%= f.label :"Ảnh đại diện", :class => "control-label col-sm-2 text-right h4" %> <br />
        <%= image_tag @user.avatar.url , size: "120x160"%> 
    </div>

    <div class="form-group3" >
        <%= f.label :email, :class => "control-label col-sm-2 text-right h4" %>
        <div class="col-sm-10">
            <div class="panel-heading"><%= @user.email if @user.email %></div>
        </div>
    </div>
    <div class="form-group3">
        <%= f.label :Name, :class => "control-label col-sm-2 text-right h4" %>
        <div class="col-sm-10">
            <div class="panel-heading"><%= @user.name if @user.name   %></div>
        </div>
    </div>

    <div class="form-group3">
        <%= f.label :"Mật khẩu", :class => "control-label col-sm-2 text-right h4" %>
        <div class="col-sm-10">
            <div class="panel-heading"><%= '*'*(@user.try(:encrypted_password).try(:length).to_i)%></div>
        </div>
      
    </div>

     <div class="form-group" style="padding:20px;margin-left:1000px;margin-bottom:20px">
        <div class="col-sm-offset-2 col-sm-10">
            <%= link_to "Chỉnh sửa",edit_user_path %>
            
        </div>
    </div>

<% end %>
