<h2>Chỉnh sửa thông tin</h2>

<%= form_for @user do |f| %>

    <div class="form-group3" >
        <%= f.label :"Ảnh đại diện", :class => "control-label col-sm-2 text-right h4" %> <br />
        <%#= image_tag @user.avatar.url , size: "120x160"%> 
    </div>

    <div class="form-group3" >
        <%= f.label :"Sửa ảnh", :class => "control-label col-sm-2 text-right h4" %> <br />
        <%= f.file_field :avatar %>
    </div>

    <div class="form-group3" >
        <%= f.label :email, :class => "control-label col-sm-2 text-right h4" %>
        <div class="col-sm-10">
          
            <%= f.text_field :email, :class => "form-control", :disabled => 'true' %>
        </div>
    </div>
    <div class="form-group3">
        <%= f.label :Name, :class => "control-label col-sm-2 text-right h4" %>
        <div class="col-sm-10">
            <%= f.text_field :name, :class => "form-control" %>
        </div>
    </div>

    <div class="form-group3">
        <%= f.label :"Mật khẩu mới", :class => "control-label col-sm-2 text-right h4" %>
        <div class="col-sm-10">
            <%= f.password_field :password, :class => "form-control", :placeholder=>"Nhập trên 6 kí tự" %>
        </div>
      

    </div>

    <div class="form-group3">
        <%= f.label :"Nhập lại mật khẩu", :class => "control-label col-sm-2 text-right h4" %>
        <div class="col-sm-10">
            <%= f.password_field :password_confirmation, :class => "form-control", :placeholder=>"Nhập lại mật khẩu" %>
        </div>    
    </div>

     <div class="form-group" style="padding:20px;margin-left:1000px;margin-bottom:20px">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Lưu tài khoản</button>
        </div>
    </div>

<% end %>

<% if current_user%>
    <% if current_user.role == "admin"%>
        <h3>Xóa tài khoản</h3>
        <%= link_to "","/"%>  
        <%#= button_to "Xóa tài  khoản", registration_path(resource_name), data: { confirm: "Bạn chắt chắn xóa ?" }, method: :delete, class: "btn btn-default" %>  
        
    <% end %>
<% end %>
